<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 평상시 -->
    <item android:state_pressed="false">
        <shape>
            <!-- 배경 -->
            <solid android:color="#6DB33F" />
            <!-- 테두리 -->
            <stroke
                android:width="2dp"
                android:color="#6DB33F" />
            <corners
                android:radius="9dp"/>

        </shape>
    </item>

    <!-- 클릭했을 때 -->
    <item android:state_pressed="true">
        <shape>
            <!-- 배경 -->
            <solid android:color="#6DB33F" />
            <!-- 테두리 -->
            <stroke
                android:width="2dp"
                android:color="#DDDDDD" />
            <!-- 코너 둥근 정도 -->
            <corners
                android:radius="9dp" />
        </shape>
    </item>
</selector>
