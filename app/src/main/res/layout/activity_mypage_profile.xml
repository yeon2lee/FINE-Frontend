<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btnBefore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_before" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="프로필 설정"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view7"
            android:layout_width="370dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_weight="1"
            android:text="프로필 사진"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view7" />

        <Button
            android:id="@+id/btnOk"
            android:layout_width="67dp"
            android:layout_height="48dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:backgroundTint="#00ff0000"
            android:onClick="onClick"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="확인"
            android:textColor="#6DB33F"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="356dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <ImageView
                android:id="@+id/profile_setting_image1_iv"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/profile1" />

            <ImageView
                android:id="@+id/profile_setting_image2_iv"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/profile2" />

            <ImageView
                android:id="@+id/profile_setting_image3_iv"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/profile3" />

            <ImageView
                android:id="@+id/profile_setting_image4_iv"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/profile4" />

            <ImageView
                android:id="@+id/profile_setting_image5_iv"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/profile6" />

            <ImageView
                android:id="@+id/profile_setting_image6_iv"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/profile5" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view4"
        android:layout_width="410dp"
        android:layout_height="1dp"
        android:background="#DDDDDD" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="닉네임"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etNickname"
        android:layout_width="360dp"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:text="한이음"
        android:textSize="18sp" />

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="자기소개"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etInfo"
        android:layout_width="361dp"
        android:layout_height="49dp"
        android:layout_marginStart="30dp"
        android:text="안녕하세요"
        android:textSize="18sp" />

    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD" />

    <TextView
        android:id="@+id/tvKeyword"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="키워드"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/profile_keyword1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:backgroundTint="#E0ECD4"
            android:onClick="onClick"
            android:paddingHorizontal="25dp"
            android:text="지역"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/profile_keyword2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#E0ECD4"
            android:onClick="onClick"
            android:paddingHorizontal="25dp"
            android:text="전공"
            app:layout_constraintEnd_toStartOf="@+id/profile_keyword3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/profile_keyword1"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/profile_keyword3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:backgroundTint="#BED7A4"
            android:onClick="onClick"
            android:paddingHorizontal="25dp"
            android:text="취미"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/profile_keyword4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:backgroundTint="@color/white"
            android:onClick="onClick"
            android:paddingHorizontal="25dp"
            android:text="여행"
            app:layout_constraintBottom_toTopOf="@+id/profile_keyword10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_keyword1"
            app:layout_constraintVertical_bias="0.17" />

        <Button
            android:id="@+id/profile_keyword5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:onClick="onClick"
            android:paddingHorizontal="25dp"
            android:text="드라이브"
            app:layout_constraintBottom_toTopOf="@+id/profile_keyword11"
            app:layout_constraintEnd_toStartOf="@+id/profile_keyword6"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/profile_keyword4"
            app:layout_constraintTop_toBottomOf="@+id/profile_keyword2"
            app:layout_constraintVertical_bias="0.17" />

        <Button
            android:id="@+id/profile_keyword6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:backgroundTint="@color/white"
            android:onClick="onClick"
            android:paddingHorizontal="25dp"
            android:text="언어"
            app:layout_constraintBottom_toTopOf="@+id/profile_keyword12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_keyword3"
            app:layout_constraintVertical_bias="0.17" />

        <Button
            android:id="@+id/profile_keyword7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:backgroundTint="@color/white"
            android:onClick="onClick"
            android:paddingHorizontal="25dp"
            android:text="독서"
            app:layout_constraintBottom_toTopOf="@+id/profile_keyword10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_keyword4"
            app:layout_constraintVertical_bias="0.5" />

        <Button
            android:id="@+id/profile_keyword8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:onClick="onClick"
            android:paddingHorizontal="25dp"
            android:text="어학"
            app:layout_constraintBottom_toTopOf="@+id/profile_keyword11"
            app:layout_constraintEnd_toStartOf="@+id/profile_keyword9"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/profile_keyword7"
            app:layout_constraintTop_toBottomOf="@+id/profile_keyword5"
            app:layout_constraintVertical_bias="0.5" />

        <Button
            android:id="@+id/profile_keyword9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:backgroundTint="@color/white"
            android:onClick="onClick"
            android:paddingHorizontal="25dp"
            android:text="쇼핑"
            app:layout_constraintBottom_toTopOf="@+id/profile_keyword12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_keyword6"
            app:layout_constraintVertical_bias="0.5" />

        <Button
            android:id="@+id/profile_keyword10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/white"
            android:onClick="onClick"
            android:paddingHorizontal="25dp"
            android:text="베이킹"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_keyword7" />

        <Button
            android:id="@+id/profile_keyword11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/white"
            android:onClick="onClick"
            android:paddingHorizontal="25dp"
            android:text="사주"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/profile_keyword12"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/profile_keyword10"
            app:layout_constraintTop_toBottomOf="@+id/signup_keyword8" />

        <Button
            android:id="@+id/profile_keyword12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/white"
            android:onClick="onClick"
            android:paddingHorizontal="25dp"
            android:text="DIY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_keyword9" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>