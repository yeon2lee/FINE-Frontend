<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:background="#FFFFFF"
    android:elevation="5dp"
    android:orientation="vertical"
    android:padding="15sp">

    <ImageView
        android:id="@+id/friend_image"
        android:layout_width="60dp"
        android:layout_height="62dp"
        app:srcCompat="@drawable/profile1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:gravity="center|left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/matching_level"
            android:layout_width="wrap_content"
            android:layout_height="18sp"
            app:srcCompat="@drawable/ic_sprout" />

        <TextView
            android:id="@+id/matching_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="5sp"
            android:gravity="center"
            android:hint="한이음"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="님"
            android:textColor="#000000" />
    </LinearLayout>

    <TextView
        android:id="@+id/matching_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="10sp"
        android:ellipsize="end"
        android:gravity="left"
        android:lines="3"
        android:maxLines="3"
        android:text="소개\n소개"
        android:textColor="#000000"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="15sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3sp"
            android:layout_weight="1"
            android:background="@drawable/manage_button"
            android:gravity="center"
            android:padding="3sp"
            android:text="인기"
            android:textColor="#6DB33F"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3sp"
            android:layout_weight="1"
            android:background="@drawable/manage_button"
            android:gravity="center"
            android:padding="3sp"
            android:text="서울"
            android:textColor="#6DB33F"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3sp"
            android:layout_weight="1"
            android:background="@drawable/manage_button"
            android:gravity="center"
            android:padding="3sp"
            android:text="컴퓨터"
            android:textColor="#6DB33F"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3sp"
            android:layout_weight="1"
            android:background="@drawable/manage_button"
            android:gravity="center"
            android:padding="3sp"
            android:text="코딩"
            android:textColor="#6DB33F"
            android:textSize="8sp" />
    </LinearLayout>
</LinearLayout>